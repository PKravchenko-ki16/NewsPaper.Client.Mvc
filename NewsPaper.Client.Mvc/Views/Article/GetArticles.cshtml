@using Calabonga.OperationResults
@using NewsPaper.Client.Mvc.ViewModels.Article;
@model OperationResult<IEnumerable<ArticleViewModel>>

<partial name="_menuArticles" model="@ViewBag.Role" />

<h1>GetArticles</h1>

<div class="row row-cols-1 row-cols-md-2">
    @foreach (var article in Model.Result)
    {
        <div class="col">
            <div class="card" style="width: 30rem; height: 60rem; margin-bottom: 30px;">
                <img src="@article.Picture" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title"><a asp-controller="Article" asp-action="GetArticleById" asp-route-articleGuid="@article.Id">@article.Title</a></h5>
                    <p class="card-text">@article.Description</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Rating: @article.Rating</li>
                    <li class="list-group-item">NikeNameAuthor: <a asp-controller="Article" asp-action="GetArticlesByIdAuthor" asp-route-authorNikeName="@article.NikeNameAuthor">@article.NikeNameAuthor</a></li>
                    <li class="list-group-item">NikeNameEditor: @article.NikeNameEditor</li>
                    <li class="list-group-item">DateOfRevision: @article.DateOfRevision</li>
                </ul>
            </div>
        </div>
    }
</div>