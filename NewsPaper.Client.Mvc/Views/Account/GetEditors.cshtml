@using Calabonga.OperationResults
@using NewsPaper.Client.Mvc.ViewModels.Editor;
@model OperationResult<IEnumerable<EditorViewModel>>

<partial name="_menuAccounts" />

<h1>GetEditors</h1>

<div class="row row-cols-1 row-cols-md-2">
    @foreach (var editor in Model.Result)
    {
        <div class="col">
            <div class="card" style="width: 30rem; margin-bottom: 30px;">
                <div class="card-body">
                    <h5 class="card-title">@editor.NikeName</h5>
                    <p class="card-text">@editor.FullName</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Email: @editor.Email</li>
                    <li class="list-group-item">CountСompletedArticles: @editor.CountСompletedArticles</li>
                    <li class="list-group-item">CountUnderRevisionArticles: @editor.CountUnderRevisionArticles</li>
                </ul>
            </div>
        </div>
    }
</div>