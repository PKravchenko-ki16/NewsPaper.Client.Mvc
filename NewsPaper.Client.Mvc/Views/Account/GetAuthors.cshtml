@using Calabonga.OperationResults
@using NewsPaper.Client.Mvc.ViewModels.Author;
@model OperationResult<IEnumerable<AuthorViewModel>>

<partial name="_menuAccounts" />

<h1>GetAuthors</h1>

<div class="row row-cols-1 row-cols-md-2">
    @foreach (var author in Model.Result)
    {
        <div class="col">
            <div class="card" style="width: 30rem; margin-bottom: 30px;">
                <div class="card-body">
                    <h5 class="card-title">@author.NikeName</h5>
                    <p class="card-text">@author.FullName</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Email: @author.Email</li>
                </ul>
            </div>
        </div>
     }
</div>